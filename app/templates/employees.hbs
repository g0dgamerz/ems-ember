{{page-title "Employees"}}
<h1>Employee List</h1>
<LinkTo @route="createemployee"><button class="btn btn-primary" type="button"><i class="fa-solid fa-plus"></i>New Employee</button></LinkTo>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact Number</th>
      <th scope="col">Gender</th>
      <th scope="col">Department</th>
      <th scope="col">Designation</th>
      <th scope="col">View</th>
      <th scope="col">Delete</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each @model as |emp|}}
    <tr>
      <td>{{emp.id}}</td>
      <td>{{emp.name}}</td>
      <td>{{emp.email}}</td>
      <td>{{emp.contactNumber}}</td>
      <td>{{emp.sex}}</td>
      <td>{{emp.departmentId.departmentName}}</td>
      <td>{{emp.designationId.designationName}}</td>
      <td>
      <LinkTo @route="employee" @model={{emp.id}}>
      <button type="button" class="btn btn-primary">
      <i class="fa-solid fa-eye"></i></button>
      </LinkTo>
      </td>
      <td>
      <button type="button" class="btn btn-danger" onclick={{action "deleteEmployee" emp}}><i class="fa-solid fa-trash"></i></button>
      </td>
      <td>
      <LinkTo @route="editemployee" @model={{emp.id}}>
      <button type="button" class="btn btn-success">
      <i class="fa-solid fa-pen-to-square"></i></button>
      </LinkTo>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{outlet}}